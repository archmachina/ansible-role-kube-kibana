---
apiVersion: v1
data:
  kibana.key: {{ kibana_key_data['content'] }}
  kibana.crt: {{ kibana_cert_data['content'] }}
  ca.crt: {{ kibana_ca_data['content'] }}
kind: Secret
metadata:
  name: kibana-cert
  namespace: {{ kibana_namespace }}
  labels:
    app: kibana-app
type: Opaque
---
apiVersion: v1
data:
  user: {{ kibana_elastic_user | b64encode }}
  pass: {{ kibana_elastic_pass | b64encode }}
kind: Secret
metadata:
  name: kibana-elastic-cred
  namespace: {{ kibana_namespace }}
  labels:
    app: kibana-app
type: Opaque
---
apiVersion: v1
data:
  key: {{ kibana_object_key | b64encode }}
kind: Secret
metadata:
  name: kibana-object-key
  namespace: {{ kibana_namespace }}
  labels:
    app: kibana-app
type: Opaque
